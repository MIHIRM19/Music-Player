<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MusicPlayer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="splash_screen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@color/gray</item>
        <item name="android:windowElevation">0dp</item>
    </style>
    <style name="MyTextInputLayoutHint" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textColorHint">@color/gray</item> <!-- Unfocused hint color -->
    </style>
    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">
        <!-- Other attributes you want to customize -->
        <item name="android:textColorHint">@color/gray</item>
    </style>
    <style name="BottomNavigationTextStyle" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">18sp</item> <!-- Customize text size here -->
        <item name="android:textStyle">bold</item> <!-- Customize text style here -->
    </style>
</resources>