<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="7dp"
    android:background="@drawable/cover_back"
    android:layout_marginBottom="10dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageMV"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/cover"
        app:shapeAppearanceOverlay="@style/curved"
        android:layout_marginStart="3dp"/>

    <TextView
        android:id="@+id/songNameMV"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="67dp"
        android:layout_toStartOf="@+id/songDuration"
        android:layout_toEndOf="@+id/imageMV"
        android:fontFamily="sans-serif"
        android:gravity="center|start"
        android:singleLine="true"
        android:text="Starboy Music"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/songAlbumMV"
        android:layout_width="150dp"
        android:layout_height="22dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="117dp"
        android:layout_toStartOf="@+id/songDuration"
        android:layout_toEndOf="@+id/imageMV"
        android:fontFamily="sans-serif"
        android:gravity="center|start"
        android:singleLine="true"
        android:text="Album"
        android:textColor="#A3A0A0"
        android:textSize="15sp"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/songDuration"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="00:00"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:textColor="#9F9D9B"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textSize="16sp"/>

</RelativeLayout>